@model IEnumerable<OnlineShop.Models.BoSuuTap>

<div class="accordion-group">
    <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseThree">Bộ sưu tập</a>
    </div>
    <div id="collapseThree" class="accordion-body collapse">
        <div class="accordion-inner">
            <div class="row-fluid">
                <table class="table table-striped table-hover table-bordered table-responsive pre-scrollable">
                    <thead>
                        <tr>
                            <th>Mã sản phẩm</th>
                            <th>Hình ảnh</th>
                            <th>Tên sản phẩm</th>
                            <th>Nhà sản xuất</th>
                            <th>Đơn giá</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
                        }
                        @foreach (var product in Model)
                        {
                            using (Html.BeginForm("RemoveItemLikeList", "User"))
                            {
                                <tr>
                                    <td>@product.MaSP</td>
                                    @Html.Hidden("MaSP", product.MaSP)
                                    @Html.Hidden("MaTV", product.MaTV)
                                    @Html.Hidden("MaBST", product.MaBST)
                                    <td style="width: 300px"><a href="@Url.Action("ProductDetail", "Product", new { id = product.MaSP })"><img alt="" src="~/Assets/images/products/@product.SanPham.HinhAnh" style="width: 300px"></a></td>
                                    <td>@product.SanPham.TenSP</td>
                                    <td>@product.SanPham.NhaSanXuat.TenNSX</td>
                                    @{
                                        var price = product.SanPham.DonGia;
                                        <td>@String.Format(info, "{0:c}", price)</td>
                                    }
                                    <td><button type="submit" class="btn btn-danger">Xóa</button></td>
                                </tr>
                            }

                        }
                        <tr>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

