                                    @if (sProduct1 != null)
                                    {
                                        if (sProduct1.GiamGia > 0)
                                        {
                                            <div class="product-box__sale">
                                                <span class="product-box__sale-value">@sProduct1.GiamGia%</span>
                                                <span class="product-box__sale__sale-label">GIẢM</span>
                                            </div>
                                            <p class="price text-warning" style="text-decoration:line-through">@String.Format(info, "{0:c}", price1)</p>
                                            <p class="price" style="color:red">@String.Format(info, "{0:c}", price1 - price1 * sProduct1.GiamGia / 100)</p>
                                        }
                                        if (sProduct1.UuThich)
                                        {
                                            <div class="product-box__favourite">
                                                <i class="fas fa-check"></i>
                                                <span class="">Yêu thích</span>
                                            </div>
                                        }
